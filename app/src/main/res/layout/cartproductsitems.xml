<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/productNlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Product Name:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product name"
            android:layout_toRightOf="@id/productNlabel"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/prodPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price per unit:"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/productNlabel"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/prodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3.5dp"
           android:layout_toRightOf="@id/prodPriceLabel"
            android:text=""
            android:textSize="17dp"
           />
        <TextView
            android:id="@+id/prodQuantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/prodPrice"
            android:layout_alignParentStart="true"
            android:text="Quantity:"
            android:textColor="@color/appColor"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/prodQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Product quantity"
            android:layout_below="@id/prodPrice"
            android:layout_toRightOf="@id/prodQuantityLabel"
            android:textColor="@color/appColor"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/totalcostLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:layout_below="@+id/prodQuantityLabel"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/totalcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_below="@id/prodQuantity"
            android:layout_toRightOf="@+id/totalcostLabel"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="12dp"/>


    </RelativeLayout>


</android.support.v7.widget.CardView>