<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/profilepicture"
        android:layout_height="50dp" android:layout_width="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:civ_border_color="@color/common_google_signin_btn_text_dark"/>

    <TextView android:id="@+id/buyername"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Name"
        android:layout_toEndOf="@+id/profilepicture" />
    <TextView android:id="@+id/secondNamebuyername"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Name"
        android:layout_toEndOf="@+id/buyername" />

    <TextView android:id="@+id/contacts"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:text="30"
       android:layout_toEndOf="@id/profilepicture"
        android:gravity="center_horizontal"
        android:layout_below="@id/buyername"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="18dp"/>
</RelativeLayout>